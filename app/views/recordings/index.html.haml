
/ First row with header
.container-fluid.bgblue.twhite
  .row
    .container
      %p#notice= notice
      .row.top-fifty-margin
        .col-md-1
        .col-md-9
          .t6em.tw700.adelle
            Search our topics.
      .row.top-fifty-margin

.container-fluid
  .row
    .container
      .row.top-fifty-margin
        .col-md-1
        .col-md-9
          -if @recordings
            - @recordings.each do |recording|
              .col-md-3
              
                / Todo - make three different row types w/ partials if i recording is between multiples of 1 to 3
                =link_to recording, :class=>"lwhite" do 
                  .recording-box.bgblack
                    .box-upper
                      .mic
                    %br
                    .box-lower
                      -if recording.name
                        .adelle.tw800.t1-6em.box-title
                          =recording.name
                      -else
                        .adelle.tw800.t1-6em.box-title
                          Untitled recording
        .row.top-hundred-margin 
.container-fluid.bgblack
  =render :partial => "layouts/footer"
            
