= form_for(@recording) do |f|
  - if @recording.errors.any?
    #error_explanation
      %h2
        = pluralize(@recording.errors.count, "error")
        prohibited this recording from being saved:
      %ul
        - @recording.errors.full_messages.each do |message|
          %li= message
          
 
  = f.file_field :file

  .actions
    = f.submit
