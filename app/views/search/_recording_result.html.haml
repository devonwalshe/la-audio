.col-md-3
  -result = result.searchable
  =link_to "/recordings/#{result.id}"+"?topic=#{@query}", :class=>"lwhite" do
    .results-box{:class=>["bgblue", "bgpeach", "bgseafoam", "bgblack", "bgdarkgrey"].sample}
      .results-box-upper.adelle.tw800
        Recording
      %br
      .results-box-lower
        -if result.name
          .adelle.tw800.t1-6em.box-title
            =result.name
        -else
          .adelle.tw800.t1-6em.box-title
            Untitled