/ First row with header
.container-fluid.bgblue.twhite
  .row
    .container
      %p#notice= notice
      .row.top-fifty-margin
        .col-md-1
        .col-md-9
          .t6em.tw700.adelle
            Search our topics.
      .row.top-fifty-margin

.container-fluid
  .row
    .container
      .row.top-twenty-margin
        .col-md-1
        .col-md-10
          -@topic_rows.each do |name, topics|
            .bottom-ten-margin
            =render partial: "tags/layouts/#{topics[:style]}", locals: {topics: topics}
        .col-md-1

        
.container-fluid.bgblack
  =render :partial => "layouts/footer"
            
