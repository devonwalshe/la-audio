= form_for(@tag) do |f|
  - if @tag.errors.any?
    #error_explanation
      %h2
        = pluralize(@tag.errors.count, "error")
        prohibited this tag from being saved:
      %ul
        - @tag.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_area :name
  .field
    = f.label :type
    %br/
    = f.text_area :type
  .actions
    = f.submit
