.container-fluid.bgblue
  .row.top-twenty-margin
    .col-md-3
      .logo
    .col-md-9
      .row
        .col-md-8
        .col-md-4
          .right-fifteen-margin
            =form_tag("/search", method: "get", ) do
              .input-group
                =text_field_tag :q, params[:q], class: "form-control", :placeholder => "Search for recordings", :type=>"text"
                %span.input-group-btn
                  =button_tag(:class=>"btn btn-default", :type => "submit") do
                    %i.glyphicon.glyphicon-search
      .row.top-fifty-margin
        .col-md-4
        .col-md-8
          %ul.list-inline.text-right
            %li
              .nav-link
                =link_to "Home", "/", :class=>"lwhite"
            %li
              .nav-link
                =link_to "About", "/about", :class=>"lwhite"
            %li
              .nav-link
                =link_to "Authors", "/authors", :class=>"lwhite"
            %li
              .nav-link
                =link_to "Topics", "/recordings", :class=>"lwhite"
            %li
              .nav-link
                =link_to "Contact", "/contact", :class=>"lwhite"

    .row
      .col-md-12.top-twenty-margin
        -if divider == true
          .divider